<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/customborder">
                <LinearLayout
                        android:id="@+id/fazenda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/cultivo_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="20dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:layout_weight="0.3"/>
                        <TextView
                            android:id="@+id/cultivo_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Nome do cultivo"
                            android:textSize="18dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/colheita_agendada"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="Agendado?"
                            android:textSize="18dp" />

                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    >
                        <TextView
                            android:id="@+id/cultivo_medio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Cultivo mÃ©dio"
                            android:textSize="18dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/dias_cultivados"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:text="Dias cultivados"
                            android:textSize="18dp"
                            android:layout_weight="1"/>

                </LinearLayout>
        </LinearLayout>


</LinearLayout>